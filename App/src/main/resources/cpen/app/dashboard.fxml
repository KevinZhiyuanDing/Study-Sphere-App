<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cpen.app.DashboardController">
    <left>
        <fx:include source="sidebar.fxml"/>
    </left>

    <center>
        <VBox alignment="TOP_CENTER" prefHeight="450.0" prefWidth="800.0" spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <VBox alignment="CENTER" prefHeight="412.0" prefWidth="760.0" spacing="20.0">
                <children>
                    <Label text="Study Sphere Dashboard" />
                    <Text fx:id="loginInStatusText" strokeType="OUTSIDE" strokeWidth="0.0" text="Not logged in" />
                    <Button fx:id="bookRoomBtn" onAction="#onBookStudyRoomClick" text="Book Study Room" />
                    <Button fx:id="existingSessionBtn" mnemonicParsing="false" onAction="#onFindSessionClick" text="Find Existing Study Session" />
                    <Button fx:id="createSessionBtn" mnemonicParsing="false" onAction="#onCreateSessionClick" text="Create New Study Session" />
                    <Button fx:id="loginButton" mnemonicParsing="false" onAction="#onLoginButtonClick" text="Login" />
                    <Button fx:id="createAccountButton" mnemonicParsing="false" onAction="#onCreateAccountClick" text="Create an Account" />
                </children>
            </VBox>
        </VBox>
    </center>
</BorderPane>

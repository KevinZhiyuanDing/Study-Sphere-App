<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.BorderPane?>


<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cpen.app.UserSessionController">
    <left>
        <fx:include source="sidebar.fxml"/>
    </left>

    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <Text strokeWidth="0.0" text="Your Study Sessions"/>

            <HBox alignment="CENTER"  spacing="50">
                <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#onRefreshClick" text="Refresh"/>
                <Button fx:id="newSessionBtn" onAction="#onNewSession" text="New Session"/>
            </HBox>

            <TableView fx:id="existingTableView" prefHeight="400" prefWidth="750">
                <columns>
                    <TableColumn fx:id="hostCol" prefWidth="150" text="Host" />
                    <TableColumn fx:id="courseCodeCol" prefWidth="150" text="Course Code" />
                    <TableColumn fx:id="roomCol" minWidth="0.0" prefWidth="150" text="Room" />
                    <TableColumn fx:id="timeCol" prefWidth="150" text="Time" />
                    <TableColumn fx:id="requestCol" prefWidth="150" text="Requests" />
                </columns>
            </TableView>
        </VBox>

    </center>
</BorderPane>
